{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "rootDir": "src",
    "module": "es2015",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators":true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
        "@/*": [
            "src/*"
        ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/jasmine",
      "@types/node"
    ],
  },
  "include": [
    "./src",
    "./test"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts",
  ]
}